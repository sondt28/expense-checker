<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="expense"
            type="com.son.expensetracker.model.Expense" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <TextView
            android:id="@+id/tvExpenseDateCreated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{java.text.DateFormat.getDateInstance(java.text.DateFormat.SHORT).format(expense.dateCreated)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvExpenseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{expense.name}"
            app:layout_constraintStart_toEndOf="@id/tvExpenseDateCreated"
            app:layout_constraintTop_toTopOf="@id/tvExpenseDateCreated" />

        <TextView
            android:id="@+id/tvExpenseCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{@string/expense_cost_format(expense.cost)}"
            android:textColor="#FF0000"
            app:layout_constraintStart_toEndOf="@id/tvExpenseName"
            app:layout_constraintTop_toTopOf="@id/tvExpenseName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>